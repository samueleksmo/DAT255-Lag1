extends layout

block content 			
	div(class='home')
		div(class='center')
			div(class='addPortID')
				h1 Added port calls
				if addedPortCalls.length == 0
					p There are currently no portcalls added
				else
					ul(class='addedPortcalls')
						each val in addedPortCalls
							li 
								br
								h5(class='vesselName') #{val.vesselName}
								a(href='/portcall/' + val.portcallid)= val.portcallid
								br
								a(href='#', class='deletePortcall', data-id=val.portcallid) Delete
								br
              
				h2 Add a new port call
				form(action='/', method='POST')
					label(for='vname') Vessel name
					br
					input(type='text', name='vname') 
					br
					label(for='pid') Port call id
					br
					input(type='text', name='pid') 
					br
					input(type='submit', name="submit", id='submitButton')

			div(class='latestCalls')
				h1 Latest port calls

				div(class='listOfVessels')
					if latestPortCalls.length == 0
						p There are currently no portcalls
					else
						ul
							each val in latestPortCalls
								li(class='vesselID')
									h5 #{val.vessel.name}
									| #{val.id}
